{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train PPO",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/scripts/train.py",
            "args": [
                "agent.name=ppo",
                "device=cpu"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Evaluate PPO",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/scripts/evaluate.py",
            "args": [
                "-c",
                "outputs/ppo"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        }
    ]
}